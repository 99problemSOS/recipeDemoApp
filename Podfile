# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'recipeDemoApp' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for recipeDemoApp

  pod 'SnapKit' #Swift Autolayout
  pod 'XMLParsing', :git => 'https://github.com/ShawnMoore/XMLParsing.git' #Encode & Decode XML
  pod 'RealmSwift' #mobile database
  pod 'FormTextField' #UITextField with support for formatters and input validators
  pod 'ProgressHUD' #simple alert / notification
  pod 'IQKeyboardManagerSwift' #prevent issues of keyboard sliding up and cover UITextField/UITextView.

  target 'recipeDemoAppTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'recipeDemoAppUITests' do
    # Pods for testing
  end

end
